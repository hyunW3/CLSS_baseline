{
    "name" : "MiB",
    "method": "MiB",
    "world_size": 1,
    "rank" : 0,
    "dist_backend": "nccl",
    "dist_url": "tcp://127.0.0.1:12345",
    "seed": 1,
    "use_amp": true,
    "arch": {
        "type": "DeepLabV3",
        "args": {
            "output_stride": 16, // checked
            "norm_act": "iabn_sync", // checked
            "backbone_pretrained": true, // checked
            "freeze_all_bn": false 
        }
    },
    "data_loader": {
        "type": "VOCIncrementalDataLoader",
        "args": {
            "task": {
                "name": "15-1",
                "step": 0,
                "setting": "overlap",
                "idxs_path": "./data/"
            },
            "train": {
                "args": {
                    "transform": true,
                    "transform_args": {
                        "crop_size": 512
                    },
                    "masking_value": 0
                },
                "batch_size": 24
            },
            "val": {
                "cross_val": false,
                "args": {
                    "transform": true,
                    "transform_args": {
                        "crop_size": 512
                    },
                    "masking_value": 0
                },
                "batch_size": 1
            },
            "test": {
                "args": {
                    "transform": true,
                    "transform_args": {
                        "crop_size": 512
                    },
                    "masking_value": 0
                },
                "batch_size": 1
            },
            "num_workers": 4,
            "pin_memory": true,
            "memory": {"mem_size": 0}
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 1e-3, // 1e-2 for initial, 1e-3 for incremental
            "weight_decay": 1e-4, // default in MiB
            "momentum": 0.9, // default in MiB
            "nesterov": true, // checked
            "lr_decay_factor" : 0.1
        }
    },
    "hyperparameter": {
        "alpha" : 1.0,
        "kd" : 10.0
    },
    "lr_scheduler": {
        "type": "PolyLR",
        "args": {}
    },
    "evaluator": {
        "type": "Evaluator",
        "args": {}
    },
    "metrics": [
        "Pixel_Accuracy",
        "Pixel_Accuracy_Class",
        "Mean_Intersection_over_Union"
    ],
    "trainer": {
        "epochs": 30, // checked
        "save_dir": "saved_voc/",
        "save_period": -1,
        "validation_period": -1,
        "verbosity": 2,
        "monitor": "off",
        "early_stop": -1,
        "reset_best_mnt": false,
        "tensorboard": false
    }
}